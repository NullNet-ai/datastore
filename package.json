{
  "name": "datastore",
  "version": "1.0.0",
  "description": "API boilerplate for datastore",
  "author": "",
  "license": "MIT",
  "main": "./dist/main.js",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV='development' nest start --watch",
    "start:debug": "NODE_ENV='development' DEBUG=true nest start --debug --watch",
    "start:prod": "NODE_ENV='production' node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "start:test:prod": "bun run test && bun run build && bun run start:prod",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "clean:build": "rm -rf node_modules bun.lockb dist package-lock.json && bun i",
    "generate": "bun run node_modules/@dnamicro/common/build/generator/index.js"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "dependencies": {
    "@dna-platform/common": "^1.0.0",
    "@elastic/elasticsearch": "^8.10.0",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.3.9",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.3.9",
    "@nestjs/platform-express": "^10.3.9",
    "@nestjs/serve-static": "^4.0.2",
    "axios": "^1.5.0",
    "classnames": "^2.3.2",
    "lowdb": "1.0.0",
    "nest-winston": "^1.9.4",
    "node-mocks-http": "^1.14.1",
    "object-path": "^0.11.8",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "split2": "^4.2.0",
    "typed-html": "^3.0.1",
    "uglify-js": "^3.17.4",
    "winston": "^3.10.0",
    "xstate": "^5.16.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.9",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.2",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^7.0.0",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^5.5.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}