{
  "name": "datastore",
  "version": "1.0.6",
  "description": "API boilerplate for datastore",
  "author": "DNA Micro",
  "license": "MIT",
  "main": "./src/main.ts",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "bun run build && NODE_ENV=development bun --watch run ./dist/main.js",
    "start:debug": "bun run build && DEBUG=true bun --watch --debug run ./dist/main.js",
    "start:prod": "bun run build && NODE_ENV='production' bun run ./dist/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "start:test:prod": "bun run test && bun run build && bun run start:prod",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "clean:build": "rm -rf node_modules bun.lockb dist drizzle package-lock.json && bun i",
    "generate": "node node_modules/@dna-platform/common/build/generator/index.js",
    "drizzle:generate": "drizzle-kit generate",
    "drizzle:cleanup": "rm -rf drizzle sql"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.platform.dnadev.net/platform/db/api/api/datastore.git"
  },
  "dependencies": {
    "@dna-platform/common": "^1.0.14",
    "@dna-platform/crdt-lww": "^1.0.56",
    "@elastic/elasticsearch": "^8.10.0",
    "@nestjs/axios": "^3.0.2",
    "@nestjs/common": "^10.4.6",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.4.6",
    "@nestjs/platform-express": "^10.4.6",
    "@nestjs/serve-static": "^4.0.2",
    "axios": "^1.5.0",
    "bluebird": "^3.7.2",
    "classnames": "^2.3.2",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.35.3",
    "drizzle-zod": "^0.5.1",
    "express": "3",
    "jsonwebtoken": "^9.0.2",
    "lodash.pick": "^4.4.0",
    "lowdb": "1.0.0",
    "murmurhash": "^2.0.1",
    "nest-winston": "^1.9.4",
    "node-mocks-http": "^1.14.1",
    "object-path": "^0.11.8",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "split2": "^4.2.0",
    "sqlite3": "^5.1.7",
    "typed-html": "^3.0.1",
    "uglify-js": "^3.17.4",
    "ulid": "^2.3.0",
    "uuid": "^10.0.0",
    "winston": "^3.10.0",
    "xstate": "^5.16.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.9",
    "@types/bun": "^1.1.12",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.12",
    "@types/lodash": "^4.17.13",
    "@types/node": "^20.14.9",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "drizzle-kit": "^0.26.2",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.2",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^7.0.0",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
